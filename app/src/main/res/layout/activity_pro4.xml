                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#00ff0000"
                android:onClick="onClick"
                android:text="@string/pro04_5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pro04_6"
