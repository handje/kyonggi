<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/room5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_margin="30dp"
            android:gravity="center_horizontal"
            android:src="@drawable/b_navi" />

        // 정보 부분.

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            // 목적지 이름.

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/title_info"
                android:gravity="center"
                android:text="5_덕문관"
                android:textSize="22sp"
                android:textStyle="bold" />

            // 목적지에 대한 정보.

            <ListView
                android:id="@+id/roominfo_content"
                android:layout_height="230dp"
                android:layout_width="280dp"
                android:background="@drawable/contents_info"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            // 취소 버튼.

                <TextView
                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cancelbtn_info"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="취소"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                // 길 안내 버튼.

                <TextView
                    android:id="@+id/naviBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/navibtn_info"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="길 안내"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>